<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.farrukhmalik.aasnewsapp.AdminArea.PostPictureNews">

    <!-- TODO: Update blank fragment layout -->



    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_default_bg"
        android:layout_marginTop="-2dp"
        android:padding="10dp"
        android:hint="  News Title"
        android:textColorHint="#bbbbbb"
        android:drawableLeft="@drawable/ic_action_name"/>


    <EditText
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_default_bg"
        android:layout_marginTop="-2dp"
        android:padding="10dp"
        android:hint="  News Description"
        android:textColorHint="#bbbbbb"
        android:drawableLeft="@drawable/ic_description"/>

<ImageView
    android:id="@+id/image"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:scaleType="centerInside"
    android:layout_gravity="center"
    android:background="@drawable/ic_placeholder"/>


    <Button
        android:id="@+id/attachPicBtnId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="4dp"
        android:text="Attach Picture"
        android:background="@drawable/button_default_bg"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="4dp"
        android:text="Upload"
        android:background="@drawable/button_default_bg"
        android:id="@+id/upload"
        />

    <ListView
        android:id="@+id/pictureList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
