<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/aaaassss"
    tools:context="com.example.farrukhmalik.aasnewsapp.Authentication.SigninPage">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/linearlayout_bg"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/button_left_drawer"
            android:layout_width="30dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_button_navigation"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <ImageView
            android:layout_marginBottom="0dp"
            android:layout_marginTop="65dp"
            android:layout_width="wrap_content"
            android:layout_height="202sp"
            android:src="@drawable/aasone"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.7"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.9"
            android:orientation="vertical">
            <EditText
                android:drawableLeft="@drawable/user"
                android:id="@+id/idEmailS"
                android:layout_width="230dp"
                android:layout_height="33dp"
                android:background="@drawable/background_edittext_field"
                android:hint="Username"
                android:inputType="text"
                android:textSize="13sp"
                android:gravity="center"/>
            <RelativeLayout
                android:layout_width="230dp"
                android:layout_height="33dp"
                android:layout_marginTop="8dp">
                <EditText
                    android:drawableLeft="@drawable/password"
                    android:id="@+id/idPasswordS"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_edittext_field"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="13sp"
                    android:gravity="center"
                    />
                <Button
                    android:id="@+id/button_visible_password"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_eye"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>

            <Button
                android:id="@+id/idsigninBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/image_button_go"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"/>


        </LinearLayout>
    </LinearLayout>

    </LinearLayout>


</RelativeLayout>
